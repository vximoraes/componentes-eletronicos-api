# =============================================================================
# CONFIGURAÇÕES DA API
# =============================================================================
# Porta em que o servidor irá rodar
PORT=3010

# Ambiente da aplicação (development, test, production)
NODE_ENV=development

# Ativa/desativa logs detalhados (true ou false)
DEBUGLOG=true

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================
# URL de conexão com o banco MongoDB
# Exemplos:
#   Local:  mongodb://localhost:27017/componentes-eletronicos
#   Atlas:  mongodb+srv://<usuario>:<senha>@<cluster>.mongodb.net/componentes-eletronicos?retryWrites=true&w=majority
#   Docker: mongodb://mongodb:27017/componentes-eletronicos (configurado no docker-compose)
DB_URL=mongodb://localhost:27017/componentes-eletronicos

# URL de conexão com o banco de testes (opcional)
DB_URL_TEST=mongodb://localhost:27017/componentes-eletronicos-test

# =============================================================================
# CONFIGURAÇÕES JWT
# =============================================================================
# Secrets para autenticação JWT
JWT_SECRET_ACCESS_TOKEN=GERE_UMA_CHAVE_SECRETA_AQUI
JWT_SECRET_REFRESH_TOKEN=GERE_UMA_CHAVE_SECRETA_AQUI
JWT_SECRET_PASSWORD_RECOVERY=GERE_UMA_CHAVE_SECRETA_AQUI

# Tempo de expiração dos tokens JWT
# Formatos aceitos: s (segundos), m (minutos), h (horas), d (dias)
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# =============================================================================
# CONFIGURAÇÕES DO SERVIÇO DE E-MAIL
# =============================================================================
# Chave de API para serviço de envio de e-mails
MAIL_API_KEY=sua_api_key

# URL base do serviço de envio de e-mails
MAIL_API_URL=http://localhost:3001

# =============================================================================
# CONFIGURAÇÕES DO MINIO (Storage de Objetos)
# =============================================================================
# Endpoint do MinIO
# Para Docker: use "minio" como MINIO_ENDPOINT ao invés de "localhost"
MINIO_ENDPOINT=localhost

# Porta da API do MinIO
MINIO_PORT=9000

# Porta do console web do MinIO
MINIO_CONSOLE_PORT=9001

# Credenciais de acesso ao MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Buckets do MinIO
MINIO_BUCKET=usuarios
MINIO_BUCKET_2=componentes

# URL pública do MinIO para acesso pelo navegador
# Use localhost quando o navegador precisar acessar as imagens
# No Docker, esta URL deve apontar para o host da máquina
MINIO_PUBLIC_URL=http://localhost:9000

# =============================================================================
# CONFIGURAÇÕES DO USUÁRIO ADMINISTRADOR (Seeds)
# =============================================================================
# Dados do usuário administrador que será criado nas seeds
ADMIN_NAME=Administrador
ADMIN_EMAIL=admin@admin.com
ADMIN_PASSWORD=Senha@123
